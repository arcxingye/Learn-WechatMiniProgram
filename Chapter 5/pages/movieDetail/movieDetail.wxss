.content{
  font-family: "Microsoft YaHei";
}
.bg{
  width:100%;
  background-color: #3F544F;
  height: 100%;
}
.movie{
  display: flex;
  flex-direction: row;
  padding-top:10px;
}
.pic image{
  width:130px;
  height: 150px;
}
.name{
  color: #ffffff;
}
.desc{
  font-size: 12px;
  color: #f2f2fe;
  height: 28px;
  line-height: 28px;
}
.operate{
  margin-top:20px;
  display: flex;
  flex-direction: row;
  padding-bottom: 10px;
}
.opr{
  width:170px;
  height: 30px;
  border: 1px solid #F0F0F0;
  margin: 0 auto;
  text-align: center;
  line-height: 30px;
  color: #000000;
  background-color: #F0F0F0;
  border-radius:3px;
  font-size: 13px; 
}
.intro{
  font-size: 13px;
  line-height: 25px;
  margin:10px;
}
.buy{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 40px;
  background-color: #FF4064;
  text-align: center;
  line-height: 40px;
  font-size: 14px;
  color: #ffffff;
}
