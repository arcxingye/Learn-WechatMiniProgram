<block wx:for="{{goods}}">
<view class="item">
  <view class="icon">
     <image src="{{item.pic}}" style="width:70px;height:87px;"></image>
  </view>
  <view class="info">
     <view class="name">{{item.name}}</view>
     <view class="priceInfo">
        <view class="price">￥{{item.price}}</view>
        <view class="count" id="{{item.id}}" bindtap="addGoods">+</view>
     </view>
  </view>
</view>
<view class="hr"></view>
</block>
