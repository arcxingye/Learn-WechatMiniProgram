.content {
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
}

.left {
  width: 25%;
  font-size: 15px;
}

.left view {
  text-align: center;
  height: 45px;
  line-height: 45px;
}
.select{
    background-color: #ffffff;
    border-left:5px solid #FFD600;
    font-weight: bold; 
}
.normal{
    background-color: #F8F8F8;
    border-bottom: 1px solid #f2f2f2;
}
.right{
    width:75%;
    margin: 10px;
}
.order{
    display: flex;
    flex-direction: row;
    text-align: center;
    padding: 10px;
}
.order view{
    width: 33%;
    font-size: 15px;
}
.hr{
    border: 1px solid #cccccc;
    opacity: 0.2;
}
.item{
    display: flex;
    flex-direction: row;
    padding: 10px;
}
.info{
    width: 80%;
}
.name{
    font-size: 16px;
    text-align: left;
}
.priceInfo{
    display: flex;
    flex-direction: row;
    margin-top:15px;
    text-align: center;
}
.price{
    width:80%;
    font-size: 15px;
    color: #ff0000;
    text-align: left;
}
.count{
    border:1px solid #cccccc;
    border-radius: 25px;
    width: 25px;
    color: #ff0000;
    text-align: center;
}


